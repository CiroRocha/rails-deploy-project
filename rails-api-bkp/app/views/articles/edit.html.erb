<h1> Edit article</h1>

<%=
  render partial: 'partials/article_form',
  locals: {
    request_url: '/articles/' + params[:id],
    request_method: 'PATCH',
    article_id: params[:id]
  }
%>

<script>
  prepopulateFields('<%= @article.title %>', '<%= @article.description %>')
</script>

<style>
  .error-message, .backend-error {
    color: red;
  }
</style>
